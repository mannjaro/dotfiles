set nobackup
set noswapfile

set number
set cursorline
set laststatus=2

set virtualedit=onemore

" set smartindent
set autoindent
set showmatch
syntax on

nnoremap j gj
nnoremap k gk
set wrap
set expandtab
set shiftwidth=2
set smarttab
set tabstop=2
set ignorecase
set smartcase
set incsearch
set hlsearch
nmap <ESC><ESC> :nohlsearch<CR><Esc>

" colorscheme 
